{
  "minify": false,
  "jsc": {
    "loose": true,
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": false
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "es2022",
    "baseUrl": "..",
    "paths": {
      "@client/*": ["client/*"],
      "@shared/*": ["shared/*"],
      "@server/*": ["server/src/*"]
    }
  },
  "module": {
    "type": "commonjs"
  }
}
